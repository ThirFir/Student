<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="창의적공학설계"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_week"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/tv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="1주차"
        app:layout_constraintTop_toTopOf="@id/tv_lecture"
        app:layout_constraintBottom_toBottomOf="@id/tv_lecture"
        app:layout_constraintStart_toEndOf="@id/tv_lecture"
        app:layout_constraintEnd_toStartOf="@id/tv_is_attendance" />

    <TextView
        android:id="@+id/tv_is_attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="출석"
        app:layout_constraintTop_toTopOf="@id/tv_lecture"
        app:layout_constraintBottom_toBottomOf="@id/tv_lecture"
        app:layout_constraintStart_toEndOf="@id/tv_week"
        app:layout_constraintEnd_toStartOf="@id/tv_attendance_time" />

    <TextView
        android:id="@+id/tv_attendance_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="10:01:32"
        app:layout_constraintTop_toTopOf="@id/tv_lecture"
        app:layout_constraintBottom_toBottomOf="@id/tv_lecture"
        app:layout_constraintStart_toEndOf="@id/tv_is_attendance"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#D4D4D4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>