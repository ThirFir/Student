<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="창의적공학설계"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_date"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="1주차"
        app:layout_constraintTop_toTopOf="@id/tv_lecture"
        app:layout_constraintBottom_toBottomOf="@id/tv_lecture"
        app:layout_constraintStart_toEndOf="@id/tv_lecture"
        app:layout_constraintEnd_toStartOf="@id/tv_is_checked" />

    <TextView
        android:id="@+id/tv_is_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="출석"
        app:layout_constraintTop_toTopOf="@id/tv_lecture"
        app:layout_constraintBottom_toBottomOf="@id/tv_lecture"
        app:layout_constraintStart_toEndOf="@id/tv_date"
        app:layout_constraintEnd_toStartOf="@id/tv_checked_time" />

    <TextView
        android:id="@+id/tv_checked_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="10:01:32"
        app:layout_constraintTop_toTopOf="@id/tv_lecture"
        app:layout_constraintBottom_toBottomOf="@id/tv_lecture"
        app:layout_constraintStart_toEndOf="@id/tv_is_checked"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>